/* pages/events/directory_detail.wxss */
@import "/wxParse/wxParse.wxss";

.detail swiper {
  width: 100%;
  height: 440rpx;
}
.detail swiper image { width: 100%; height: inherit;}
.events-detail { padding: 0;}
/*.events-detail .detail-container { padding: 10px;}*/
.events-detail .headline { padding: 10px;}
.table {width: 100%; height: auto; background: #fbf5f4;border-bottom: 1px solid #e5cec9;}
.tr { display: flex; border-top: 1px solid #e5cec9; padding: 20rpx 24rpx; position:relative;}
.td { display: flex; align-items: center;font-size: 16px; line-height: 1.2;} /* td 默认垂直居中*/
.flow-1 { flex-basis: 120px;flex-shrink:0; font-weight: 500;}
.flow-2 { flex-flow: 1;}
.tr .iconfont { margin-right:5px;}
.td.iconfont::after { 
  font-family: "iconfont";
  content: "\e6a7";
}

.text-container { 
  padding: 20px;
  line-height: 1.2;
}

.map_container{ 
  height: 300px; 
  width: 100%;
  padding: 50rpx 0;
	border-top:1px dashed #999;
} 

.map_container map { 
    height: 100%; 
    width: 100%; 
}